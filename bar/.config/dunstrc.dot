[global]
	font = {{= it.font.mono.family }} {{= it.font.mono.size - 4 }}
	allow_markup = yes
	format = "<i>%a:</i> %s\n%p"
	sort = yes
	indicate_hidden = yes
	alignment = left
	word_wrap = yes
	ignore_newline = no
	geometry = "450x50-10+{{= it.bar.height + 10 }}"
	shrink = yes
	show_indicators = yes
	separator_height = 1
	padding = 12
	horizontal_padding = 12
	separator_color = auto
	browser = /usr/bin/firefox -new-tab
	icon_position = left
	icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
	width = 0

[urgency_low]
	background = "#{{= it.colors.background.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	foreground = "#{{= it.colors.foreground.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	timeout = 10

[urgency_normal]
	background = "#{{= it.colors.background.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	foreground = "#{{= it.colors.foreground.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	timeout = 10

[urgency_critical]
	background = "#{{= it.colors.background.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	foreground = "#{{= it.colors.foreground.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("") }}"
	timeout = 0
