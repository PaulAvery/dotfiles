#!/bin/bash
echo 50 0 0 0

killall lemonbar 2>/dev/null || true
~/lib/bar/lib/bar.js | lemonbar -f "$(tstore get font.mono | sx -jx x)" -g x50 -B '#'$(tstore get colors.background | sx -jx 'x.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("")') -F '#'"$(tstore get colors.foreground | sx -jx 'x.map(function (c) { return ("0" + c.toString(16)).substr(-2); }).join("")')" >/dev/null &
